{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.AspNetCore.Mvc": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=booktheshow;Username=postgres;Password=BookTheShow@2024!",
    "Redis": "localhost:6379"
  },
  
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "booktheshow",
    "Password": "booktheshow123",
    "VirtualHost": "/"
  },
  
  "Elasticsearch": {
    "Uri": "http://localhost:9200",
    "DefaultIndex": "booktheshow-events"
  },
  
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.Mvc.Infrastructure": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/booktheshow-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": null,
          "compact": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "BookTheShow.API",
      "Environment": "Production"
    }
  },
  
  "Jwt": {
    "Secret": "BookTheShow-Super-Secret-Key-That-Should-Be-In-Vault-12345!",
    "Issuer": "BookTheShow.API",
    "Audience": "BookTheShow.Client",
    "ExpiryMinutes": 60
  },
  
  "SeatLocking": {
    "LockDurationSeconds": 600,
    "MaxRetries": 3,
    "RetryDelayMilliseconds": 100
  },
  
  "RateLimiting": {
    "EnableRateLimiting": true,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ],
    "BookingRules": [
      {
        "Endpoint": "*/api/bookings/*",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  
  "VirtualWaitingRoom": {
    "Enabled": true,
    "MaxConcurrentUsers": 5000,
    "QueueBatchSize": 100,
    "BatchIntervalSeconds": 10
  },

  "HealthChecks": {
    "Sql": {
      "Name": "sqlserver",
      "Tags": [ "db", "sql", "sqlserver" ]
    },
    "Redis": {
      "Name": "redis",
      "Tags": [ "cache", "redis" ]
    },
    "RabbitMQ": {
      "Name": "rabbitmq",
      "Tags": [ "messaging", "rabbitmq" ]
    }
  },

  "DiagnosticsSettings": {
    "EnableDetailedDiagnostics": false,
    "EnableRequestLogging": true,
    "LogStaticFiles": false,
    "LogHealthChecks": false
  }
}
